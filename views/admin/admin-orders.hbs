<style>
    table {
        width: 7cm;
        height: 7cm;
        border: 1px solid;
        page-break-after: always;
    }

    @media print {
        @page {
            size: A4 portrait;
        }
    }

    .neumorphic-alert-box {
        background-color: #f2f2f2;
        border-radius: 10px;
        box-shadow:
            -10px -10px 20px rgba(255, 255, 255, 1),
            10px 10px 20px rgba(0, 0, 0, 0.2);
        padding: 20px;
        text-align: center;
        display: none;
        position: absolute;
    }

    .neumorphic-alert-buttons {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .neumorphic-alert-cancel-btn {
        background-color: #f2f2f2;
        border: none;
        border-radius: 10px;
        box-shadow:
            -5px -5px 10px rgba(255, 255, 255, 1),
            5px 5px 10px rgba(0, 0, 0, 0.2);
        color: #666;
        cursor: pointer;
        font-size: 16px;
        padding: 10px 20px;
        margin-right: 10px;
    }

    .neumorphic-alert-delete-btn {
        background-color: #f44336;
        border: none;
        border-radius: 10px;
        box-shadow:
            -5px -5px 10px rgba(255, 255, 255, 1),
            5px 5px 10px rgba(0, 0, 0, 0.2);
        color: #fff;
        cursor: pointer;
        font-size: 16px;
        padding: 10px 20px;
    }

    .close-row {
        display: none;
    }

    .open-pop {
        display: block;
    }
</style>

<script>
    let slno = document.getElementsByClassName('slno')
    for (let i = 0; i < slno.length; i++) {
        slno[i].innerHTML = i + 1;
    }
    /* pagination */
    let num = 4
    let p = 1;
    document.getElementById('curP').innerHTML = p;
    p = 2
    document.getElementById('totalP').innerHTML = Math.ceil((slno.length) / num)
    let n = num;
    let m;
    let order = document.getElementsByClassName('orderRow')
    for (let i = 0; i < order.length; i++) {
        if (i >= num) {
            order[i].classList.add('close-row')
        }
    }
    function frontpage() {
        if (n + 1 < order.length + 1) {
            for (let i = 0; i < order.length; i++) {
                if (i >= n && i < n + num) {
                    order[i].classList.remove('close-row')
                } else {
                    order[i].classList.add('close-row')
                }
            }
            document.getElementById('curP').innerHTML = p;
            p++;
            m = n
            n = num + n;
        } else {
            document.getElementById('backP').setAttribute = 'disabled'
        }
    }
    function backpage() {
        if (n - 1 > -1) {
            for (let i = 0; i < order.length; i++) {
                order[i].classList.add('close-row')
                if (i < n && i >= n - num) {
                    order[i].classList.remove('close-row')
                }
            }
            p--;
            document.getElementById('curP').innerHTML = p;
            m = n
            n = n - num;
        } else {
            document.getElementById('backP').setAttribute = 'disabled'
        }
    }

</script>

