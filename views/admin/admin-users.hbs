<head>
    <link rel="stylesheet" href="/stylesheets/admin/admin-home.css">
    <link rel="icon" href="img/favicon.png">

</head>

<div class="dropdown bg-black pb-1">
    <button class="btn text-white dropdown-toggle  bg-black" type="button" data-bs-toggle="dropdown"
        aria-expanded="false">
        ADMIN
    </button>
    <ul class="dropdown-menu bg-black profile">
        <li><a class="dropdown-item" href="/admin">Home</a></li>
        <li><a class="dropdown-item" href="/admin/products">Products</a></li>
        <li><a class="dropdown-item" href="/admin/users">Customers</a></li>
        <li><a class="dropdown-item" href="/admin/orders">Orders</a></li>
        <li><a class="dropdown-item" href="/admin/coupons">Coupons</a></li>
        <li><a class="dropdown-item" href="/admin/banners">Banners</a></li>
    </ul>
    <span class="float-end"><a href="/admin/logout" title="logout"><img src="/images/user/logout.png" class="logout"
                alt=""></a></span>
</div>

<div class=" w-100 h-75 d-flex justify-content-center">

    <div class="mt-5  w-75 h-100 ">
        <div class="row mb-3">
            <div class="col-12 col-md-4 mb-3">
                <form action="/admin/search-user" method="get" class="d-flex">
                    <input type="text" name="query1" class="form-control me-2" placeholder="Search by username">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <form action="/admin/search-mobile" method="get" class="d-flex">
                    <input type="text" name="query2" class="form-control me-2" placeholder="Search by mobile">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <form action="/admin/search-email" method="get" class="d-flex">
                    <input type="text" name="query3" class="form-control me-2" placeholder="Search by email">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
                 </div>
        </div>




        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th scope="col"></th>
                        <th scope="col">Name</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Email</th>
                        {{!-- <th scope="col">Orders</th> --}}
                        <th scope="col">Address</th>
                        <th scope="col">Active</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {{#each users}}
                    <tr class="text-center">
                        <th scope="row">



                            <img src="/image/{{this.image}}" class="rounded-5" style="width: 35px;height: 35px;" alt=""
                                onerror="this.src='https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png'">
                        </th>
                        <td>{{this.username}}</td>
                        <td>{{this.mobile}}</td>
                        <td>{{this.email}}</td>
                        {{!-- <td>â‚¹{{this.orders}}</td> --}}
                        <td>{{#if this.address.[0].city}}{{this.address.[0].city}}{{else}}empty!{{/if}}</td>
                        <td>
                            {{#if this.active}}
                            {{!-- <p class="online">Online</p> --}}
                            <img src="/images/admin/online.svg" width="20px" alt="">
                            {{else}}
                            {{!-- <p class="offline">Offline</p> --}}
                            <img src="/images/admin/offline.svg" width="20px" alt="">
                            {{/if}}

                        </td>
                        <td>
                            <a href="/admin/edit-user/{{this._id}}"><img src="/images/admin/edit-icon.svg"
                                    style="width: 25px;" class="me-3" alt=""></a>

                            {{#if this.blocked}}
                            {{!-- <p class="online">Online</p> --}}
                            <a href="/admin/unblock-user/{{this.mobile}}"><img src="/images/admin/block.svg"
                                    width="20px" class="m-2 me-3" alt=""></a>

                            {{else}}
                            {{!-- <p class="offline">Offline</p> --}}
                            <a href="/admin/block-user/{{this.mobile}}"><img src="/images/admin/unblock.svg"
                                    width="20px" class="m-2 me-3" alt=""></a>

                            {{/if}}

                            {{!-- <a href="/admin/delete-user/{{this._id}}"
                                onclick="return confirm('Are you want to delete {{this.mobile}} ?')"><img
                                    src="/images/admin/delete-icon.svg" style="width: 20px;" alt=""></a> --}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <nav aria-label="Page navigation example" class="d-none d-lg-block">
            <ul class="pagination float-end">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
<style>
    table {
        width: 7cm;
        height: 7cm;
        border: 1px solid;
        page-break-after: always;
    }
</style>