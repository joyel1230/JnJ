<script>
    function clickImg() {
        document.getElementById('click').click()
    }

    function viewimage(event) {
        document.getElementById('userImgView').src = URL.createObjectURL(event.target.files[0])
    }

    function check() {
        let newp = document.getElementById('new-password').value
        let con = document.getElementById('confirm-password').value
        if (newp.length >= 4) {
            document.getElementById('samePass').innerHTML = ''
            if (newp === con) {
                return true;
            } else {
                document.getElementById('sameRe').innerHTML = '&nbsp;Password must be same&nbsp;'
            }
        } else {
            document.getElementById('samePass').innerHTML = '&nbsp;Minimum 4 digits&nbsp;'
        }
        return false;
    }


