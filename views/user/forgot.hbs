<section class="d-flex  flex-column justify-content-center align-items-center">
  <div
    class="container-fluid p-0 rounded-4  col-9 col-md-6 d-flex justify-content-sm-end justify-content-center sec-1 position-relative"
    style="box-shadow: 0 0 4px 4px rgba(0,0,0,0.4);">
    <div class="w-100 position-absolute"><a href="/login" style="text-decoration: none;">
        <h4 class="text-white mt-4 fw-bold text-center">Login <span class="fw-normal">or</span> Signup</h4>
      </a>
    </div>
    <div class="row m-2">
      <form class="me-5 mt-5 pe-3 w-100 text-white" action="/password" method="post">
        {{#if pop}}
        <span style="background-color: white;color: red;padding: 1px;">OTP ERROR</span>
        {{/if}}
        <div class="mb-1">
          <label for="username" class="form-label">Mobile Number</label>
          <input type="text" class="form-control" name="mobile" id="mobile" placeholder="Mobile Number"
            value="{{newMobile}}">
          <a class="forgot text-light opacity-50">Resend OTP</a>
        </div>
        <span id="sameMob" class="text-danger fs-6 bg-white rounded-3"></span>
        <div class="">
          <label for="username" class="form-label">OTP</label>
          {{!-- <span>(hint : 0000)</span> --}}
          <input type="text" class="form-control" id="OTP" name="OTP" placeholder="OTP">
        </div>

        <span id="sameOTP" class="text-danger bg-white rounded-3"></span>
        <div class="">
          <label for="" class="form-label">Create Password</label>
          <input type="password" class="form-control" name="password" id="pass" placeholder="Create Password">
        </div>
        <span id="samePass" class="text-danger bg-white rounded-3"></span>
        <div class="mb-1">
          <label for="" class="form-label">Confirm Password</label>
          <input type="password" class="form-control" id="rePass" placeholder="Confirm Password">
        </div>
        <span id="sameRe" class="text-danger bg-white rounded-3"></span>

        <div class="text-center">
          <button type="submit" class="loginBtn border mb-4 text-white fs-5 fw-bold"
            onclick="return isValid()">Done</button>
        </div>

      </form>
    </div>
  </div>
</section>
<style>
  body {
    height: 100vh;
     background-image: linear-gradient(16deg, #ffffff 0%, #ffffff 64%, #ffffff 100%);
    background-repeat: no-repeat;
  }
</style>

<script src="/javascripts/forgot.js"></script>