<style>
    .popup{
    width: 400px;
    background: #fff;
    border-radius: 6px;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%) scale(0.1);
    z-index: 1;
    padding: 20px;
    color: #333;
    text-align: center;
    visibility: hidden;
}
.open-pop{
    visibility: visible;
    transform: translate(-50%,-50%) scale(1);
}
</style>

<script>
    openPop();
  function openPop() {
    let pop = document.getElementById('popup');
    pop.classList.add('open-pop');
}
  function closePop() {
    let pop = document.getElementById('popup');
    pop.classList.remove('open-pop');
  }
</script>