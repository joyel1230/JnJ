<style>
    .popup {
        width: 400px;
        height: 200px;
        background-color: #f0f0f0;
        border-radius: 20px;
        box-shadow: 10px 10px 30px #bebebe81, -10px -10px 30px #ffffff;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 2;

        padding: 20px;
        color: #333;
        text-align: center;
        display: none;
    }

    .popup h2 {
        font-size: 32px;

        text-shadow: 2px 2px 2px #bebebe, -2px -2px 2px #ffffff;
    }


    .open-pop {
        display: block;
    }

    .prelo {
        background: #000000 url('/images/pre.gif') no-repeat center;
        background-size: 30%;
        height: 100vh;
        width: 100%;
        position: fixed;
        z-index: 100;
    }

    .pre {
        background: none;
    }

    .dis {
        display: none;
    }
</style>

<script>

    openPop();
    function openPop() {
        let pop = document.getElementById('popupd');
        pop.classList.add('open-pop');
    }
    function closePop() {
        let pop = document.getElementById('popupd');
        pop.classList.remove('open-pop');
    }

    function addedto(element) {
        element.querySelector('.addto').style.display = 'none';
        element.querySelector('.added').textContent = 'added';
        // Call the addToCart function with the appropriate argument

    }
    function addtowish(thi) {
        thi.querySelector('.hrtno').style.display = 'none'
        thi.querySelector('.hrt').classList.remove('dis')
    }


</script>